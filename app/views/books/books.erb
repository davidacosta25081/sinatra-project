<br></br>
<div class="container text-center">
  <div class="row">
    <div class="col-sm-4 well">
      <div class="well">
        <h4>Welcome, <%= @user.username.capitalize %></h4>
      </div>


    </div>
    <div class="col-sm-8">

      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default text-left">
            <div class="panel-body">
              <form method="post" action="/books">
                <p contenteditable="true"><input class="book" type="text" name="description" id="description"></p>
                <input type="submit" class="btn btn-primary btn-sm" value="Tweet It!">
              </form>
            </div>
          </div>
        </div>
      </div>

      <% @books.each {|book| %>

          <div class="col-sm-9">
            <div class="well">
          <% if @user == book.user %>

              <p><%=book.description%></p>


              <% end %>
            </div>
          </div>
        </div>
      <% } %>
  </div>
</div>
